<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.ActionBar" parent="@style/Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorHintText</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:itemBackground">@drawable/action_bar_bg_gradient</item>
        <item name="android:fontFamily">@font/alegreya_sans</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/action_bar_bg_gradient</item>
        <item name="android:fontFamily">@font/alegreya_sans</item>
        <!-- Support library compatibility -->
        <item name="background">@drawable/action_bar_bg_gradient</item>
    </style>


        <!-- Base application theme. -->
        <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
            <!-- Customize your theme here. -->
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
            <item name="colorAccent">@color/colorAccent</item>
            <item name="android:textColorHint">@color/colorHintText</item>
            <item name="android:textCursorDrawable">@null</item>
            <item name="android:fontFamily">@font/alegreya_sans</item>
        </style>

    <style name="look_of_a_button_when_activity_is_work_in_progress">
        <item name="android:padding">0dp</item>
        <item name="android:rotation">3</item>
        <item name="android:rotationX">3</item>
        <item name="android:rotationY">3</item>
        <item name="android:shadowColor">#1239EE</item>
        <item name="android:shadowRadius">10</item>
    </style>

    <style name="titleTextViewStyle">
        <item name="android:background">#00000000</item>
        <item name="android:fadingEdge">horizontal|vertical</item>
        <item name="android:fontFamily">@font/alegreya_sans</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textGentleWhite</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="title">
        <item name="android:layout_width">149dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:fontFamily">@font/baumans</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AnyTitleStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:fontFamily">@font/alegreya_sans</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AnyMultilineText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:fontFamily">@font/alegreya_sans</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textColor">@color/textGentleWhite</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="GoldenRatingBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:isIndicator">true</item>
        <item name="android:numStars">5</item>
        <item name="android:rating">3</item>
        <item name="android:stepSize">1</item>
        <item name="android:colorControlActivated">#ffffff</item>
        <item name="android:colorControlNormal">#ffffff</item>

    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:fontFamily">@font/alegreya_sans</item>
        <item name="android:background">@drawable/edittext_states_selector</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/colorHintText</item>
    </style>

    <style name="AnyTextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_states_selector</item>
        <item name="android:fontFamily">@font/alegreya_sans</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="semiTransparentRoundedCard">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@drawable/semi_transparent_rounded</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="spinnerStyle" parent="EditTextStyle">
        <item name="android:background">@drawable/spinner_states</item>
        <item name="android:prompt">@string/selectCategory</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextLarge" parent="android:TextAppearance.DeviceDefault.Large">
        <item name="android:fontFamily">@font/alegreya_sans</item>
        <item name="android:textColor">@color/White</item>
    </style>


    <color name="White">#ffffffff</color>
</resources>
