<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


        <!-- Base application theme. -->
        <style name="MarilenaTheme" parent="Theme.AppCompat.Light.NoActionBar">
            <!-- Customize your theme here. -->
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
            <item name="colorAccent">@color/colorAccent</item>
            <item name="android:textColorHint">@color/colorHintText</item>
            <item name="android:textCursorDrawable">@null</item>
        </style>

    <style name="look_of_a_button_when_activity_is_work_in_progress">
        <item name="android:padding">0dp</item>
        <item name="android:rotation">3</item>
        <item name="android:rotationX">3</item>
        <item name="android:rotationY">3</item>
        <item name="android:shadowColor">#1239EE</item>
        <item name="android:shadowRadius">10</item>
    </style>

    <style name="titleTextViewStyle">
        <item name="android:background">#00000000</item>
        <item name="android:fadingEdge">horizontal|vertical</item>
        <item name="android:fontFamily">@font/alegreya_sans</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textGentleWhite</item>
        <item name="android:textSize">36sp</item>
    </style>


</resources>
